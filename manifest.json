{
	"manifest_version": 2,

	"name": "taleez",
	"version": "1.0",

	"description": "Extension taleez",

	"browser_action": {

		"default_icon" : "taleez.png",
		"default_popup": "index.html"
	},
	
	"background":
	{

		"scripts": ["background.js"]
	},

	"icons": {
		"128" : "taleez.png"
	},

	"content_scripts": [
		{
			"matches": ["https://www.linkedin.com/*"],
			"js": ["app.js","axios.min.js"]
		}
	],

	"author": [
		"Rachdi Bassem , Ru tan , Marine Colonge"
	],


	"permissions": [
		"http://*/", 
		"https://*/",
		"tabs",
		"clipboardRead",
		"clipboardWrite",
		"storage"
	]

}